<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"

    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="?attr/colorOnBackground"
    tools:context=".fragments.ClientEditFragment">

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline_map_H20"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.35" />

    <fragment
        android:id="@+id/frg"
        class="com.google.android.gms.maps.SupportMapFragment"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:cameraZoom="10"
        app:layout_constraintBottom_toTopOf="@+id/guideline_map_H20"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ScrollView

        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/guideline_map_H20"
        app:layout_constraintBottom_toBottomOf="parent"

        >
        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">


            <androidx.constraintlayout.widget.Guideline
                android:id="@+id/guideline_client_V70"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                app:layout_constraintGuide_percent="0.54" />


            <com.google.android.material.textfield.TextInputLayout
                style="@style/SpinnerStyle"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:hint="RUTA"
                app:endIconMode="dropdown_menu"
                android:id="@+id/textInputLayoutGang"
                app:layout_constraintEnd_toStartOf="@+id/btnCleanGang"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/guideline_client_V70">

                <AutoCompleteTextView
                    android:id="@+id/autoCompleteGang"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:focusable="false"
                    />

            </com.google.android.material.textfield.TextInputLayout>

            <Button
                android:id="@+id/btnCleanGang"
                android:layout_width="50dp"
                android:layout_height="60dp"
                android:text="x"
                style="@style/ButtonStyle"
                app:layout_constraintTop_toBottomOf="@+id/guideline_client_V70"
                app:layout_constraintEnd_toEndOf="parent" />

            <com.google.android.material.textfield.TextInputLayout
                style="@style/SpinnerStyle"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:hint="DIA DE VISITA"
                android:id="@+id/textInputLayoutVisitDay"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/textInputLayoutGang">

                <AutoCompleteTextView
                    android:id="@+id/autoCompleteVisitDay"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />

            </com.google.android.material.textfield.TextInputLayout>



            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/textInputLayoutObservation"
                style="@style/CustomTextInputLayoutFilledBoxStyle"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/textInputLayoutVisitDay">

                <com.google.android.material.textfield.TextInputEditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="CODIGO"
                    android:id="@+id/textInputEditTextPersonObservation" />

            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout
                style="@style/SpinnerStyle"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:hint="EXHIBIDOR"
                android:id="@+id/textInputLayoutShowcases"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/textInputLayoutObservation">

                <AutoCompleteTextView
                    android:id="@+id/autoCompleteShowcases"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />

            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/textInputLayoutDocumentType"
                style="@style/SpinnerStyle"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:hint="TIP DOC"
                app:endIconMode="dropdown_menu"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/textInputLayoutShowcases">

                <AutoCompleteTextView
                    android:id="@+id/autoCompleteDocumentType"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />

            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/textInputLayoutDocumentNumber"
                style="@style/CustomTextInputLayoutFilledBoxStyle"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                app:layout_constraintEnd_toStartOf="@+id/btnSearchApi"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/textInputLayoutDocumentType">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/textInputEditTextDocumentNumber"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:maxLength="11"
                    android:hint="NUM DOCUMENTO" />

            </com.google.android.material.textfield.TextInputLayout>

            <Button
                android:id="@+id/btnSearchApi"
                android:layout_width="50dp"
                android:layout_height="60dp"
                app:icon="@drawable/ic_baseline_search_24"
                app:iconGravity="textStart"
                app:iconPadding="0dp"
                style="@style/ButtonStyle"
                app:layout_constraintTop_toBottomOf="@+id/textInputLayoutDocumentType"
                app:layout_constraintEnd_toEndOf="parent" />


            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/textInputLayoutName"
                style="@style/CustomTextInputLayoutFilledBoxStyle"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/textInputLayoutDocumentNumber">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/textInputEditTextPersonName"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="NOMBRE O RAZON SOCIAL"/>

            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/textInputLayoutFirstSurname"
                style="@style/CustomTextInputLayoutFilledBoxStyle"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/textInputLayoutName">

                <com.google.android.material.textfield.TextInputEditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="APELLIDO PATERNO"
                    android:id="@+id/textInputEditTextPersonFirstSurname" />

            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/textInputLayoutSecondSurname"
                style="@style/CustomTextInputLayoutFilledBoxStyle"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/textInputLayoutFirstSurname">

                <com.google.android.material.textfield.TextInputEditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="APELLIDO MATERNO"
                    android:id="@+id/textInputEditTextPersonSecondSurname" />

            </com.google.android.material.textfield.TextInputLayout>


            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/textInputLayoutCellPhone"
                style="@style/CustomTextInputLayoutFilledBoxStyle"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/textInputLayoutSecondSurname">

                <com.google.android.material.textfield.TextInputEditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="CELULAR"
                    android:id="@+id/textInputEditTextPersonCellPhone" />

            </com.google.android.material.textfield.TextInputLayout>


            <com.google.android.material.textfield.TextInputLayout
                style="@style/SpinnerStyle"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:hint="TIPO DE CLIENTE"
                android:id="@+id/textInputLayoutCustomerType"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/textInputLayoutCellPhone">

                <AutoCompleteTextView
                    android:id="@+id/autoCompleteCustomerType"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />

            </com.google.android.material.textfield.TextInputLayout>


            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/textInputLayoutAddressName"
                style="@style/CustomTextInputLayoutFilledBoxStyle"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/textInputLayoutCustomerType">

                <com.google.android.material.textfield.TextInputEditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="DIRECCION ACTUAL"
                    android:id="@+id/textInputEditTextAddressName" />

            </com.google.android.material.textfield.TextInputLayout>


            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/textInputLayoutDistrict"
                style="@style/SpinnerStyle"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:hint="DISTRITO"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/textInputLayoutAddressName">

                <AutoCompleteTextView
                    android:id="@+id/autoCompleteDistrict"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />

            </com.google.android.material.textfield.TextInputLayout>



            <Switch
                android:id="@+id/switchStatus"
                style="@style/SwitchCompatStyle"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_margin="15dp"
                android:text="DAR DE BAJA"
                android:textSize="16dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/textInputLayoutDistrict"
                tools:ignore="UseSwitchCompatOrMaterialXml" />


            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/textInputLayoutComment"
                style="@style/CustomTextInputLayoutFilledBoxStyle"
                android:layout_width="0dp"
                android:layout_height="wrap_content"

                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/switchStatus">

                <com.google.android.material.textfield.TextInputEditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="textMultiLine"
                    android:hint="COMENTARIOS"
                    android:gravity="top"
                    android:lines="4"

                    android:id="@+id/textInputEditTextComment" />

            </com.google.android.material.textfield.TextInputLayout>


            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/textInputLayoutLatitude"
                style="@style/CustomTextInputLayoutFilledBoxStyle"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:enabled="true"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/textInputLayoutComment">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/textInputEditTextLatitude"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="LATITUD" />

            </com.google.android.material.textfield.TextInputLayout>


            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/textInputLayoutLongitude"
                style="@style/CustomTextInputLayoutFilledBoxStyle"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/textInputLayoutLatitude">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/textInputEditTextLongitude"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:enabled="true"
                    android:hint="LONGITUD" />

            </com.google.android.material.textfield.TextInputLayout>

            <Button
                android:id="@+id/btnSaveAndQuote"
                style="@style/ButtonStyle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:width="240dp"
                android:text="GUARDAR Y HACER PREVENTA"
                app:icon="@drawable/ic_baseline_storage_24"
                app:iconGravity="textStart"
                app:iconPadding="0dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/textInputLayoutLongitude" />


            <Button
                android:id="@+id/btnSaveAndSell"
                style="@style/ButtonStyle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:width="240dp"
                android:text="GUARDAR Y HACER VENTA DIRECTA"
                android:backgroundTint="@color/pink_light"
                app:icon="@drawable/ic_baseline_store_24"
                app:iconGravity="textStart"
                app:iconPadding="0dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/btnSaveAndQuote" />

            <Button
                android:id="@+id/btnSaveAndGoToMap"
                style="@style/ButtonStyle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:width="240dp"
                android:text="GUARDAR Y VER MAPA"
                android:backgroundTint="@color/warning"
                app:icon="@drawable/ic_baseline_location_on_24"
                app:iconGravity="textStart"
                app:iconPadding="0dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/btnSaveAndSell" />



        </androidx.constraintlayout.widget.ConstraintLayout>

    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>