<?xml version="1.0" encoding="utf-8"?>

    <androidx.cardview.widget.CardView
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        style="@style/CustomCardViewStyle"

        app:cardElevation="4dp"
        app:cardCornerRadius="3dp"

        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="4dp">

            <androidx.constraintlayout.widget.Guideline
                android:id="@+id/guidelineOrderPlaced_v10"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                app:layout_constraintGuide_percent="0.6" />

            <androidx.constraintlayout.widget.Guideline
                android:id="@+id/guidelineOrderPlaced_v25"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                app:layout_constraintGuide_percent="0.4" />

            <androidx.constraintlayout.widget.Guideline
                android:id="@+id/guidelineOrderPlaced_v85"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                app:layout_constraintGuide_percent="0.7" />

            <TextView
                android:id="@+id/cardPickingDate"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="26/10/2021"
                android:textSize="14sp"
                app:layout_constraintEnd_toStartOf="@+id/guidelineOrderPlaced_v25"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/cardPickingClient"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="Biscocho Alfonso Ugarte #1323"
                android:textSize="18sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="1.0"
                app:layout_constraintStart_toStartOf="@+id/guidelineOrderPlaced_v25"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/cardPickingUser"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="ruben"
                android:textSize="16sp"
                app:layout_constraintEnd_toStartOf="@+id/guidelineOrderPlaced_v25"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/cardPickingDate" />

            <TextView
                android:id="@+id/cardPickingTotal"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="15"
                android:textAlignment="textEnd"
                android:textSize="18sp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="@+id/guidelineOrderPlaced_v85"
                app:layout_constraintTop_toBottomOf="@+id/cardPickingClient" />

            <TextView
                android:id="@+id/cardPickingItems"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="3"
                android:textAlignment="center"
                android:textSize="16sp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toStartOf="@+id/guidelineOrderPlaced_v85"
                app:layout_constraintStart_toStartOf="@+id/guidelineOrderPlaced_v25"
                app:layout_constraintTop_toBottomOf="@+id/cardPickingClient" />

        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.cardview.widget.CardView>
